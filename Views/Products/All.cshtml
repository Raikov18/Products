@model List<ProductViewModel>
<h1>All Products Info </h1>
<hr />
<table class="table table-hover">
    <thead>
        <tr>
            <th> Name </th>
            <th> Price</th>
            <th> Quantity </th>
            <th>Id</th>
            <th></th>
            <th></th>
        </tr>

    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="col">@item.Name</th>
                <th scope="col">@item.Price</th>
                <th scope="col">@item.Quantity</th>

                <th> <a asp-controller="Product" asp-action="Details" asp-route-id="@item.Id">Details</a></th>
                <th> <a asp-controller="Product" asp-action="Edit" asp-route-id="@item.Id">Edit</a></th>
                <th> <a asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id">Delete</a></th>
            </tr>
        }
    </tbody>
</table>